# Pega MCP Server Configuration Template
# Copy this file to .env and fill in your actual credentials

# Pega Platform URL
PEGA_BASE_URL=https://your-pega-instance.com

# OAuth2 Credentials
PEGA_CLIENT_ID=your_client_id
PEGA_CLIENT_SECRET=your_client_secret

# Application Configuration
APP_ALIAS=your_app_alias

# API Configuration
API_BASE_PATH=/prweb/app/{app_alias}/api/application/v2
OAUTH2_TOKEN_URL=/prweb/PRRestService/oauth2/v1/token
VERIFY_SSL=true
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30

# MCP Server Configuration
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8080 